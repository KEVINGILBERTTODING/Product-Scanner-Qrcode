<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dianascanner">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScanQRCode"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.example.dianascanner.PenjualanActivity"
            android:exported="false" />
        <activity
            android:name="com.example.dianascanner.TransaksiActivity"
            android:exported="false" />
        <activity
            android:name="com.example.dianascanner.AboutMe"
            android:exported="false" />
        <activity
            android:name="com.example.dianascanner.DashboardActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.dianascanner.TambahBarang"
            android:exported="false" />
        <activity
            android:name="com.example.dianascanner.MediaBarcode"
            android:exported="false" />
        <activity
            android:name="com.example.dianascanner.ScanQrCode"
            android:exported="true" />
        <activity
            android:name="com.example.dianascanner.SplashScreen"
            android:exported="true" />
        <activity
            android:name="com.example.dianascanner.MainActivity"
            android:exported="true" />
    </application>

</manifest>